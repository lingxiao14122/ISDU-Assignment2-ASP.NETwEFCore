@page
@model Assignment2.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["location"] = "Users";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.UserID" />
            <div class="form-group">
                <label asp-for="User.FormFile" class="control-label"></label>
                <input asp-for="User.FormFile" class="form-control" type="file" />
                <span asp-validation-for="User.FormFile" class="text-danger"></span>
                <img src="@(HttpContext.Request.Scheme + "://" + HttpContext.Request.Host + "/Uploads/" + Model.User.Photo)"
                     width="100"
                     class="img-fluid img-thumbnail mt-2"
                     alt="Employee photo">
            </div>
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                <input asp-for="User.UserName" class="form-control" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserEmail" class="control-label"></label>
                <input asp-for="User.UserEmail" class="form-control" />
                <span asp-validation-for="User.UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.EmployeeNumber" class="control-label"></label>
                <input asp-for="User.EmployeeNumber" class="form-control" />
                <span asp-validation-for="User.EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Age" class="control-label"></label>
                <input asp-for="User.Age" class="form-control" />
                <span asp-validation-for="User.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" type="password" value="@Model.User.Password"/>
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.DepartmentID" class="control-label"></label>
                <select asp-for="User.DepartmentID" class="form-control" asp-items="ViewBag.DepartmentID"></select>
                <span asp-validation-for="User.DepartmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Active" class="control-label"></label>
                <select asp-for="User.Active" class="form-control" asp-items="ViewBag.Active"></select>

                <span asp-validation-for="User.Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
